<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="expanse.player_tree">
      <field name="name">expanse list</field>
      <field name="model">expanse.player</field>
      <field name="arch" type="xml">
        <tree>
          <field name="avatar_tumb" widget="image"/>
          <field name="name"/>
          <field name="colonies_qty"/>
          <field name="colonies" widget="many2many_tags"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="expanse.player_form">
      <field name="name">expanse list</field>
      <field name="model">expanse.player</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="avatar" widget="image"/>
              <field name="name"/>
              <field name="password" password="True"/>
            </group>
            <notebook>
              <page string="Colonies">
                <group>
                  <field name="colonies_qty"/>
                  <field name="colonies"/>
                </group>
              </page>
            </notebook>


          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="expanse.planet_tree">
      <field name="name">expanse list</field>
      <field name="model">expanse.planet</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="size"/>
          <field name="gravity"/>
        </tree>
      </field>
    </record>

  </data>
</odoo>