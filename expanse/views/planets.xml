<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="expanse.planet_tree">
            <field name="name">expanse list</field>
            <field name="model">expanse.planet</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="size"/>
                    <field name="gravity"/>
                    <field name="coordinates"/>
                    <field name="colonies" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="expanse.planet_form">
            <field name="name">expanse list</field>
            <field name="model">expanse.planet</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="image" widget="image"/>
                            <field name="name"/>
                            <field name="size"/>
                            <field name="gravity"/>
                             <field name="coordinates"/>
                        </group>
                        <notebook>
                            <page string="Colonies">
                                <group>
                                    <field name="colonies" mode="tree">
                                        <tree>
                                            <field name="name"/>
                                            <field name="player"/>
                                            <field name="hangar_level"/>
                                            <field name="buildings" widget="many2many_tags"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>


                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="expanse.planet_kanban">
            <field name="name">expanse kanban</field>
            <field name="model">expanse.planet</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="image"/>


                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card o_kanban_record_has_image_fill ">
                                <div class="o_kanban_image_fill_left o_kanban_image_full d-none d-md-block"
                                     t-attf-style="background-image:url('#{kanban_image('expanse.planet',
                     'image', record.id.value, placeholder)}')">
                                </div>

                                <div class="oe_kanban_details d-flex flex-column">
                                    <a type="open">
                                        <h4 class="o_kanban_record_title oe_partner_heading"><field name="name"/></h4></a>
                                    <ul>


                                    </ul>
                                </div>
                            </div>


                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record model="ir.ui.view" id="expanse.colony_tree">
            <field name="name">expanse list</field>
            <field name="model">expanse.colony</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="planet"/>
                                <field name="money"/>
                                <field name="water"/>
                                <field name="energy"/>
                                <field name="metal"/>
                                <field name="hydrogen"/>
                                <field name="food"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="expanse.colony_form">
            <field name="name">expanse list</field>
            <field name="model">expanse.colony</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h2><field name="name"/></h2>
                        <group>

                            <group>

 <field name="player_avatar" widget="image"/>
                                <field name="player"/>

                            </group>
                            <group>
  <field name="planet"/>
                                <field name="money"/>
                                <field name="water"/>
                                <field name="energy"/>
                                <field name="metal"/>
                                <field name="hydrogen"/>
                                <field name="food"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Buildings">
                                <group>
                                    <field name="buildings" mode="tree">

                                    </field>
                                </group>
                            </page>
                            <page string="Spaceships">
                                <group>
                                    <group>
                                        <field name="hangar_level"/>
                                    </group>
                                    <group>
                                        <button name="update_hangar" type="object" string="Update Hangar" class="oe_highlight" />
                                    </group>
                                </group>
                                <group>
                                    <field name="spaceships" mode="tree">
                                        <tree>
                                            <field name="name"/>
                                            <field name="qty"/>
                                            <field name="fabrications_queue"/>
                                            <field name="fabrications_progress" widget="progressbar"/>
                                        </tree>

                                    </field>
                                    <field name="available_spaceships" mode="kanban">
                                        <kanban>
                                            <field name="id"/>
                                            <field name="image"/>
                                            <field name="name"/>
                                            <field name="capacity"/>
                                            <field name="armor"/>
                                            <field name="damage"/>

                                            <templates>
                                                <t t-name="kanban-box">
                                                    <div t-attf-class="oe_kanban_card o_kanban_record_has_image_fill ">
                                                        <div class="o_kanban_image_fill_left o_kanban_image_full d-none d-md-block"
                                                             t-attf-style="background-image:url('#{kanban_image('expanse.spaceship',
                     'image', record.id.value, placeholder)}')">
                                                        </div>

                                                        <div class="oe_kanban_details d-flex flex-column">
                                                            <a type="open">
                                                                <h4 class="o_kanban_record_title oe_partner_heading"><field name="name"/></h4></a>
                                                            <ul>
                                                                <li>Capacity: <field name="capacity"/></li>
                                                                <li>Armor: <field name="armor"/></li> <li>Damage: <field name="damage"/></li>
                                                            </ul>
                                                        </div>
                                                        <div class="oe_kanban_details d-flex flex-column">
                                                            <button name="fabricate"
                                                                    type="object"
                                                                    string="Fabricate"
                                                                    class="btn btn-primary"
                                                                    context="{'ctx_colony':parent.id}"
                                                            >Fabricate</button>
                                                        </div>
                                                    </div>


                                                </t>
                                            </templates>
                                        </kanban>

                                    </field>

                                </group>
                            </page>
                        </notebook>


                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>